<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/roctet_bg_img"
    >

    <TextView
        android:id="@+id/updateTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="升级到新版本"
        android:textColor="#295775"
        android:textSize="18sp"/>
    <TextView
        android:id="@+id/updateVersionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#295775"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"/>
    <TextView
        android:id="@+id/updateUpgradePrompt"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text=""
        android:textColor="#8e8e8e"
        android:textSize="13sp" />

    <LinearLayout
        android:id="@+id/dialog_sure"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@drawable/updata_version_but_bg"
        >

        <TextView
            android:id="@+id/updateBut"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即升级"
            android:textColor="#ffffff"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>